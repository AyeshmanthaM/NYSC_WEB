# Admin Panel Environment Configuration

# API Configuration
VITE_API_URL=http://localhost:3001

# App Configuration
VITE_APP_NAME="NYSC Translation Management"
VITE_APP_VERSION="1.0.0"

# Development Configuration
VITE_DEV_MODE=true
VITE_SHOW_DEBUG=true

# WebSocket Configuration
VITE_WS_URL=ws://localhost:3001/ws

# Features Configuration
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_AUTO_SAVE=true
VITE_ENABLE_BULK_OPERATIONS=true

# UI Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_THEME=light
VITE_ITEMS_PER_PAGE=50

# Cache Configuration
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=300000

# Security Configuration (for production)
# VITE_API_URL=https://api.nysc.lk
# VITE_WS_URL=wss://api.nysc.lk/ws
# VITE_DEV_MODE=false
# VITE_SHOW_DEBUG=false