{
  "name": "nysc-backend",
  "version": "1.0.0",
  "description": "NYSC Sri Lanka unified backend with integrated admin panel",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "dev:backend": "nodemon",
    "dev:admin": "cd admin-vue && npm run dev",
    "dev:both": "concurrently \"npm run dev:backend\" \"npm run dev:admin\"",
    "build": "npm run build:clean && npm run build:ts && npm run build:copy && npm run build:vue",
    "build:clean": "rm -rf dist && rm -rf public/admin-spa",
    "build:ts": "tsc",
    "build:copy": "node scripts/build-copy.js",
    "build:vue": "cd admin-vue && npm run build",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testMatch '**/tests/unit/**/*.test.ts'",
    "test:integration": "jest --testMatch '**/tests/integration/**/*.test.ts'",
    "test:e2e": "jest --testMatch '**/tests/e2e/**/*.test.ts'",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio"
  },
  "keywords": [
    "nysc",
    "backend",
    "admin-panel",
    "nodejs",
    "express",
    "typescript",
    "mysql",
    "prisma"
  ],
  "author": "NYSC Sri Lanka Development Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "@types/connect-flash": "^0.0.40",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "csv-parser": "^3.2.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-session": "^1.18.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.10.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.9.4",
    "nodemailer": "^6.9.13",
    "redis": "^4.6.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.7",
    "@types/nodemailer": "^6.4.15",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prisma": "^5.11.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
